<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/colorTV"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/colorPickerView" />

    <com.art.colorpicker.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        app:cpv_alphaChannelVisible="true" />

    <com.art.colorpicker.RectColorPickerView
        android:id="@+id/rectColorPickerView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="10dp" />

</LinearLayout>